/* components/Introduce/Introduce.wxss */
.Inctroduce-container {
  /* 铺满使用它的父组件 */
  width: 100%;
  height: 100%;

  display: flex;
  flex-direction: column;
  align-items: center;
}

.top-name-container {
  width: 100%;
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.top-name {
  color: white;
  font-family: "Microsoft YaHei", 微软雅黑;
  font-size: 65rpx;
  letter-spacing: 0.2rem;
  font-weight: bold;
  text-shadow: 10px 5px 20px rgb(32, 32, 32);

  margin-top: 7vh;
  /*上下位置微调*/

}

.middle-infomation-container-wrap {
  width: 100%;
  height: 100%;
  flex: 5;
  display: flex;
  justify-content: center;
  align-items: center; 
}

.middle-infomation-container {
  /* 通过max、min调整白色框大小 */
  max-width: 80%;
  max-height: 50vh;
  min-width: 20vh;
  min-height: 50vh;

  background: rgba(255, 255, 255, 0.527);
  border-radius: 20px;
  box-shadow: 5px 10px 20px rgb(129, 129, 129);
  /* 通过flex让文字盒子居中和铺满 */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.middle-infomation {
  /*文字盒子铺满白色方块*/
  flex: 1;
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  color: rgb(98, 101, 105);
  line-height: 4.7vh;
  /* 取消单词换行 */
  word-break:break-all;
  /*使用rpx单位使字体大小适应屏幕大小*/
  font-size: 30rpx;
  padding: 50rpx 50rpx;
  /* 通过flex调整中间文字位置 */
  display: flex;
  flex-direction: column;

}