/* pages/ApplicationForm/ApplicationForm.wxss */
page {
    position: relative;
}

/* 背景的样式 */
.bgIMG-container {
    position: absolute;
    z-index: -999;
    height: 100%;
    width: 100%;
    
}

.bgIMG-container image {
    width: 100%;
    max-height: 100%;
}

.form-container {
    position: relative;
    top:10%;
    left: 10%;
    width: 600rpx;
    
    background-color: rgba(255, 255, 255, .6);
    border-radius: 15rpx;
    padding-bottom: 30rpx;
}

.logo-container {

    width: 400rpx;
    padding: 20rpx 0 0 20rpx;
}

.logo-container image {
    width: 100%;
}

.note {
    font-size: 26rpx;

    color: #808080;

    padding-left: 5%;
    padding-bottom: 2%;
    box-shadow: 0rpx 1rpx #808080
}

.input-container {
    width: 540rpx;
    /* background-color: beige; */
    margin: 0 auto 0 auto;
}

.input-container .input-item {
    height: 80rpx;
    line-height: 100rpx;
    margin-bottom: 12rpx;
    display: flex;
    white-space: nowrap;

}

.input-container .input-item text {
    font-size: 28rpx;
    margin: 0 20rpx 0 30rpx;
}

.input-container input {
    border: 1px solid #b3b3b3;
    height: 60rpx;
    margin-top: 20rpx;
    border-radius: 15rpx;
    font-size: 30rpx;
    padding-left: 20rpx;
}

.self-comment{
    margin-bottom: 30rpx;
    
}

.self-comment view{
    font-size: 28rpx;
    margin: 20rpx 20rpx 10rpx 0rpx;
}

.self-comment textarea{
    border: 1rpx solid #b3b3b3;
    padding: 10rpx 10rpx;
    width: 98%;
    height: 150rpx;
    border-radius: 10rpx
}

.submitbtn{
   
    
    background-color: #567ebc;
    color: #fff;
}