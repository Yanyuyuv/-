/* pages/SearchResult/SearchResult.wxss */
page{
    position: relative;
}

/* 背景的样式 */
.bgIMG-container {
    position: absolute;
    z-index: -999;
    height: 100%;
    width: 100%;
    background-color: aqua;
}

.bgIMG-container image{
   width: 100%;
    max-height: 100%;
}

/* 流程图的样式 */
.process-container{
    position: absolute;
    top: 5%;
    height: 90%;
    width: 60%;
    left: 20%;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
    /* background-color: rgba(255, 255, 255, .5) */
}

.each-container {
    display: flex;
    width: 100%;
    justify-content: space-around;
    align-items: center;
}

.each-container text{
    width: 30%;
    text-align: center;
    font-size: 30rpx;
    color: #222;
}

.each-container .iconfont{
    color: #ccc;
}

.lines{
    position: relative;
    width: 100%;
    height: 100%;
}

.lines .each-line{
    position: absolute;
    left: 49.3334%;
    width: 1.3333%;
    height: 16%;
    background-color:  rgba(204, 204, 204.6);
    
}

.lines .each-line:nth-child(1){
    top:15%;
}

.lines .each-line:nth-child(2){
    top:33%
}

.lines .each-line:nth-child(3){
    top:51%
}

.lines .each-line:nth-child(4){
    top:69%
}