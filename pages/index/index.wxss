page{
  background: rgb(86,126,188);
}
.index-container{
  width: 100%;
  height:100vh;
  user-select: none;/*禁止选中*/
  position: relative;/*方便后续的绝对定位*/
  display: flex;/*用flex来让轮播图部分铺满*/
  flex-direction: column;

}
/* 轮播图(高度占据了90vh) */
.swiper-container{
  width: 100%;
  flex:1;/*让轮播图部分铺满下面的部分*/

  animation-name: ease-in;
  animation-duration:2s;
}  

/* 缓入动画 */
@keyframes ease-in{
  0%{
    opacity: 0;
  }
  100%{
    opacity: 1;
  }

}